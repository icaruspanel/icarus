{
  "name"             : "ollieread/laravel-starter",
  "type"             : "project",
  "description"      : "An opinionated Laravel starter kit.",
  "keywords"         : [],
  "license"          : "MIT",
  "require"          : {
    "php": "^8.5",
    "laravel/framework": "^12.0",
    "laravel/tinker": "^2.10.1",
    "symfony/uid": "^7.4",
    "tpetry/laravel-postgresql-enhanced": "^3.5"
  },
  "require-dev"      : {
    "barryvdh/laravel-ide-helper": "^3.6",
    "fakerphp/faker"             : "^1.23",
    "larastan/larastan"          : "^3.8",
    "laravel/pail"               : "^1.2.2",
    "laravel/sail"               : "^1.51",
    "laravel/telescope"          : "^5.16",
    "mockery/mockery"            : "^1.6",
    "nunomaduro/collision"       : "^8.6",
    "phpunit/phpunit"            : "^11.5.3"
  },
  "autoload"         : {
    "psr-4": {
      "App\\"                : "app/",
      "Icarus\\"             : "src/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\"  : "database/seeders/"
    }
  },
  "autoload-dev"     : {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts"          : {
    "setup"                    : [
      "composer install",
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
      "@php artisan key:generate",
      "npm install",
      "npm run build",
      "sail build"
    ],
    "dev"                      : [
      "Composer\\Config::disableProcessTimeout",
      "npx concurrently -c \"#93c5fd,#fb7185,#fdba74\" \"./vendor/bin/sail up\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=sail,logs,vite --kill-others"
    ],
    "test"                     : [
      "@php artisan config:clear --ansi",
      "@php artisan test"
    ],
    "post-autoload-dump"       : [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd"          : [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
      "[ -d vendor/barryvdh/laravel-ide-helper ] && composer ide-helper || true"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd"  : [
      "@php artisan key:generate --ansi"
    ],
    "pre-package-uninstall"    : [
      "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
    ],
    "static"                   : [
      "@php vendor/bin/phpstan analyse --memory-limit=1G"
    ],
    "ide-helper"               : [
      "@php artisan ide-helper:generate",
      "@php artisan ide-helper:meta"
    ],
    "ide-helper:models"        : [
      "@php artisan ide-helper:models --write-mixin"
    ]
  },
  "extra"            : {
    "laravel": {
      "dont-discover": [
        "laravel/telescope",
        "barryvdh/laravel-ide-helper"
      ]
    }
  },
  "config"           : {
    "optimize-autoloader": true,
    "preferred-install"  : "dist",
    "sort-packages"      : true,
    "allow-plugins"      : {
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable"    : true
}
